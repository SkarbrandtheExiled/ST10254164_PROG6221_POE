<Window x:Class="ST10254164_PROG6221_POE.Classes.viewAllRecipes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10254164_PROG6221_POE.Classes"
        mc:Ignorable="d"
        Title="viewAllRecipes" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="RecipeListBox" Margin="10,10,10,10" Grid.RowSpan="2"/>
        <Button Content="Select" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="SelectButton_Click" Grid.Row="1"/>
    </Grid>
</Window>
